---
interface Props {
	title: string;
    buttonText: string;
	href: string;
}

const { title, buttonText, href } = Astro.props;
---

<header>
    <div class="bg">
        <div class="contentATF">
            <img src="\logo-white.png" class="logo" alt="">
            <h1>{title}</h1>
            <a href={href}>
                {buttonText}
                <img src="\arrow-right.png" alt="">
            </a>
        </div>
    </div>
</header>

<style>
    .bg {
        display: flex;
        align-items: center;
        justify-content: center;
        background-image: url("../images/group61.png");
        background-size: cover;
        background-position: center;
        height: 80dvh;
        min-height: 800px;
    }
    .logo {
        display: none;
    }
    .contentATF {
        width: 100%;
        max-width: 1366px;
        padding: 2rem;
    }
    h1, p {
        margin: 0;
        margin-bottom: 2rem;
        max-width: 760px;
    }
    h1 {
        font-size: 4.5rem;
        font-weight: 800;
        line-height: 1.12;
    }
    p {
        font-size: 1.2rem;
    }
    a {
        background-color: #EEC432;
        border-radius: 10px;
        color: white;
        text-decoration: none;
        padding: 12px 36px;
        display: inline-flex;
        gap: 1rem;
        align-items: center;
        font-size: 1.4rem;
    }
    a img {
        width: 24px;
        height: 24px;
    }
    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }
        .logo {
            display: block;
            width: 140px;
            margin-bottom: 20px;
        }
    }
</style>