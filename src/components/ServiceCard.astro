---
interface Props {
    icon: string;
    title: string;
    description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="service-card">
    <img src={icon} alt="">
    <h2>{title}</h2>
    <p>{description}</p>
</div>

<style>
    .service-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #ffffff14;
        border-radius: 22px;
        -webkit-box-shadow: 0px 0px 25px 10px rgba(0,0,0,0.2);
        -moz-box-shadow: 0px 0px 25px 10px rgba(0,0,0,0.2);
        box-shadow: 0px 0px 25px 10px rgba(0,0,0,0.2);
        max-width: 380px;
        padding: 1rem;
    }
    h2 {
        font-size: 2rem;
        line-height: 1.12;
        margin-bottom: 0;
    }
    p {
        text-align: center;
        margin-bottom: 0;
    }
</style>